{
  "name": "umbrella-corp-bd",
  "version": "2.0.0",
  "main": "handler.js",
  "repository": "git@github.com:shroukkhan/UmbrellaCorpBd.git",
  "author": "Shrouk Khan <shroukkhan@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.7",
    "@types/faker": "^4.1.2",
    "@types/jest": "^23.3.0",
    "@types/moment-timezone": "^0.5.6",
    "@types/node": "^10.5.2",
    "@types/ramda": "^0.25.35",
    "faker": "^4.1.0",
    "jest": "^23.4.1",
    "lambda-tester": "^3.5.0",
    "serverless": "^1.37.1",
    "serverless-offline": "^3.25.6",
    "serverless-plugin-typescript": "^1.1.5",
    "source-map-support": "^0.5.6",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0"
  },
  "scripts": {
    "test": "jest --silent",
    "test:circleci": "NODE_ENV=circleci jest --runInBand --silent --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --silent --coverage",
    "build": "tsc --pretty ; cp config.* ./.build/",
    "createConfig": "ts-node ./__scripts__/createSampleConfig.ts",
    "db:sync": "mysqladmin -f -uroot -proot0987 -hbattleship.ctmmz6dc2hbs.ap-southeast-1.rds.amazonaws.com drop  battleship ; mysqladmin -uroot -proot0987 -hbattleship.ctmmz6dc2hbs.ap-southeast-1.rds.amazonaws.com create  battleship; ts-node ./__scripts__/syncProductionDb.ts",
    "db:migration:create": "typeorm migration:create -n ",
    "db:migration:create:help": "echo create migration like this: arn db:migration:create migration_name",
    "db:sync:local": "mysqladmin -f -uroot -proot  drop  battleship ; mysqladmin -uroot -proot  create  battleship; NODE_ENV=sls_offline ts-node ./__scripts__/syncProductionDb.ts",
    "sls:offline": "cp config.* ./.build/ ; NODE_ENV=sls_offline yarn serverless offline start --host 0.0.0.0 --port 3000 ",
    "sls:deploy": "cp config.* ./.build/  ; serverless deploy"
  },
  "dependencies": {
    "aws-sdk": "^2.279.1",
    "mysql2": "^1.5.3",
    "ramda": "^0.25.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.7"
  },
  "jest": {
    "globals": {
      "__TEST__": true,
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(-spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "rootDir": "./"
  }
}
